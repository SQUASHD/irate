generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NespressoCapsules {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Decimal  @db.Decimal(10, 2)
  image       String
  intensity   Int
  size        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  ratings     Rating[]
}

model Rating {
  id          Int               @id @default(autoincrement())
  rating      Int
  comment     String
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  itemRated   NespressoCapsules @relation(fields: [itemRatedId], references: [id])
  itemRatedId Int
}
